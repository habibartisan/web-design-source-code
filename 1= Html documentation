       1. Iframes         ----   <iframe src=”” style=””></iframe>          
                                                     
       2.Video            ----  <video width="320" height="240" controls >
                                               <source src="movie.mp4" type="video/mp4">
                                                </video>  
       3. Audio           ----   <audio controls>
                                                 <source src="horse.ogg" type="audio/ogg">    
                                                  </audio>
                                               
       4. Layout           ---- 
       5. Forms            ----  <form action="#" method="-"  target="-">---</form>
       6. Input type       ---- <input type="---"> 
                                           <label for="--">--</label>
                                           <input  type="-"  name="-"   value="-"  placeholder="-"  id="-">
                                                   1. text                           7. Search 
                                                   2. email                         8. reset 
                                                   3. password                 9. date /month /number / color 
                                                   4. file                            10. radio → name="-"
                                                   5. submit →value="-" 11. checkbox  
                                                   6. button                      12. Hidden  
                                                   
